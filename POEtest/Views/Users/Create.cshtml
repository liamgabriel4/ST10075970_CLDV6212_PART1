@model POEtest.Models.User

<h1>Add New User</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="User_Name"></label>
        <input asp-for="User_Name" class="form-control" required />
        <span asp-validation-for="User_Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="email"></label>
        <input asp-for="email" class="form-control" required />
        <span asp-validation-for="email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="password"></label>
        <input asp-for="password" class="form-control" type="password" required />
        <span asp-validation-for="password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

