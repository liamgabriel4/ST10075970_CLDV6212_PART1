@model IEnumerable<POEtest.Models.User>

<h1>Users</h1>
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Add New User</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.User_Name</td>  @* Display User_Name *@
                <td>@user.email</td>
                <td>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="partitionKey" value="@user.PartitionKey" />
                        <input type="hidden" name="rowKey" value="@user.RowKey" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

