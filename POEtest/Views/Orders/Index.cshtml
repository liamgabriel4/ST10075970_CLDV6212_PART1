@model IEnumerable<POEtest.Models.Order>

<h1>All Orders</h1>

<a href="@Url.Action("Register", "Orders")" class="btn btn-primary mb-3">Add New Order</a>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>User ID</th>
            <th>Product ID</th>
            <th>Location</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.User_ID</td>
                <td>@order.Product_ID</td>
                <td>@order.Order_Location</td>
                <td>@order.Order_Date.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="@Url.Action("Details", "Orders", new { id = order.Order_Id })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Action("Edit", "Orders", new { id = order.Order_Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "Orders", new { id = order.Order_Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this order?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>